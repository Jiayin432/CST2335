<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/weatherForecast_iV_CurrentTemperature"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/weatherForecast_tV_CurrentTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weatherForecast_tV_CurrentTemperature"
        />

    <TextView
        android:id="@+id/weatherForecast_tV_MainTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weatherForecast_tV_MainTemperature" />

    <TextView
        android:id="@+id/weatherForecast_tV_MaxTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weatherForecast_tV_MaxTemperature" />

    <TextView
        android:id="@+id/weatherForecast_tV_UV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weatherForecast_tV_UVRating" />

    <ProgressBar
        android:id="@+id/weatherForecast_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        />
</LinearLayout>